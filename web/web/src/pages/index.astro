---
import Layout from '../layouts/Layout.astro';

// vamos a importar toda la informacion del plugin que tenemos
import theme from '../../../../src/theme.js'

const { animation } = theme


---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Tailwind plugin</h1>
		<h2>The plugin that you need! =D</h2>

		<div>
			<code> npm install @nanaan/tailwindcss-animations </code>
		</div>

		<section class="max-w-4xl m-auto grid grid-cols-3 gap-4  mb-4 mt-4">
			{
				Object.keys(animation).map((animationKey) => {
					return(
						<article
							class="p-4 col-span-1 border rounded border-gray cursor-crosshair hover:border-gray-500"
							data-class={animationKey}
						>
							<div class="p-4 flex gap-4 items-center justify-center flex-col w-full h-full">
								<span class="w-16 h-16 bg-gray-200 rounded-md flex items-center justify-center"></span>
								<h3 class="font-semibold text-sm opacity-80" >{animationKey}</h3>
							</div>
						</article>
					)
				})
			}
		</section>

	</main>
</Layout>

<style>
	h1 {
		font-size: 4rem;
		font-weight: 700;
		text-align: center;
	}

</style>

<script>
	const d = document,
		$articles = d.querySelectorAll('article')
	
	$articles.forEach(($article)=>{
		const animationKey = $article.getAttribute('data-class')
		const animationClass = `animate-${animationKey}`

		const $span = $article.querySelector('span')
		if ($span == null) return

		$article.addEventListener('mouseenter',()=>{			
			$span.classList.add(animationClass)
		})

		$article.addEventListener('mouseleave',()=>{			
			$span.classList.remove(animationClass)
		})
	})

</script>